@page
@model ShoeStore.Web.Pages.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>Вход</title>
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="icon" href="~/Resources/Icon.ico" />
</head>
<body>
    <form method="post" class="login-viewport" novalidate>
        <div class="login-panel" role="dialog" aria-labelledby="login-title">
            <h1 id="login-title" class="ttl">Вход</h1>

            <div class="field">
                <label asp-for="Login">Почта</label>
                <input asp-for="Login" class="input" />
            </div>

            <div class="field">
                <label asp-for="Password">Пароль</label>
                <input asp-for="Password" type="password" class="input" />
            </div>

            <div class="actions">
                <button asp-page-handler="Login" class="btn primary" type="submit">Войти</button>
                <button asp-page-handler="Guest" class="btn ghost" type="submit">Войти как гость</button>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="error" role="alert">@Model.ErrorMessage</div>
            }
        </div>
    </form>
</body>
</html>
