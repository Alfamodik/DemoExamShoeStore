<Window x:Class="ShoeStore.OrderEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Заказ"
        Width="400"
        Height="600"
        WindowStartupLocation="CenterScreen"
        Icon="/Resources/Icon.png">
    <StackPanel Margin="10">

        <TextBlock Text="Товар"/>
        <ComboBox Name="ProductComboBox" DisplayMemberPath="DisplayName"/>

        <TextBlock Text="Количество"/>
        <TextBox Name="AmountTextBox"/>

        <TextBlock Text="Дата заказа"/>
        <DatePicker Name="DateOrderPicker"/>

        <TextBlock Text="Дата доставки"/>
        <DatePicker Name="DateDeliveryPicker"/>

        <TextBlock Text="Пункт выдачи"/>
        <ComboBox Name="PickUpPointComboBox" DisplayMemberPath="Address"/>

        <TextBlock Text="Пользователь"/>
        <ComboBox Name="UserComboBox" DisplayMemberPath="Login"/>

        <TextBlock Text="Код получения"/>
        <TextBox Name="CodeTextBox"/>

        <TextBlock Text="Статус"/>
        <ComboBox Name="StatusComboBox">
            <ComboBoxItem Content="Завершен"/>
            <ComboBoxItem Content="Новый"/>
        </ComboBox>

        <Button Content="Назад"
                Height="35"
                Margin="0,10,0,0"
                Click="BackClick"/>

        <Button Content="Сохранить"
                Height="35"
                Margin="0,5"
                Click="SaveOrder"/>

        <Button Content="Удалить"
                Height="35"
                Margin="0,5"
                Click="DeleteOrder"/>

    </StackPanel>
</Window>
