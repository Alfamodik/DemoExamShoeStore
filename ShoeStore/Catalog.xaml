<Window x:Class="ShoeStore.Catalog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoeStore"
        mc:Ignorable="d"
        Title="Каталог"
        MinHeight="450"
        MinWidth="800"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image 
            Grid.Row="0"
            Grid.Column="0"
            Height="100"
            Source="/Resources/Icon.png"
            Margin="10"/>

        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            Text="Каталог"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="40"/>

        <Button
            Grid.Row="0"
            Grid.Column="2"
            Content="Назад"
            Height="35"
            Width="100"
            Click="Logout"
            Margin="10" Background="MediumSpringGreen"/>

        <ListBox
            Name="ProductsListBox"
            Grid.Column="0"
            Grid.Row="2"
            Grid.ColumnSpan="3"
            HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:ProductUserControl DataContext="{Binding}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
