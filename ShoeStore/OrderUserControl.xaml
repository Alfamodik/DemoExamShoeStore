<UserControl x:Class="ShoeStore.OrderUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="180"/>
        </Grid.ColumnDefinitions>

        <StackPanel 
            Grid.Column="0"
            Orientation="Vertical">
            <TextBlock Text="{Binding ProductArticle, StringFormat='{}Артикул заказа: {0}'}"/>
            <TextBlock Text="{Binding Status, StringFormat='{}Статус заказа: {0}'}"/>
            <TextBlock Text="{Binding PickUpPoint.Address, StringFormat='{}Адрес пункта выдачи: {0}'}" />
            <TextBlock Text="{Binding DateOrder, StringFormat='{}Дата заказа: {0:dd.MM.yyyy}'}"/>
        </StackPanel>

        <StackPanel 
            Grid.Column="1"
            VerticalAlignment="Center" 
            HorizontalAlignment="Center">
            <TextBlock Text="Дата доставки" HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding DateDelivery}" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</UserControl>
