<Window x:Class="ShoeStore.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoeStore"
        mc:Ignorable="d"
        Title="Вход"
        MinHeight="450"
        MinWidth="800"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Icon="/Resources/Icon.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Column="1"
            Grid.Row="1"
            Text="Вход"
            HorizontalAlignment="Center"
            FontSize="24"/>

        <TextBlock
            Grid.Column="0"
            Grid.Row="3"
            FontSize="14"
            HorizontalAlignment="Right"
            Text="Почта"
            Margin="5"/>

        <TextBox
            Grid.Column="1"
            Grid.Row="3"
            Name="login"
            FontSize="14"/>

        <TextBlock
            Grid.Column="0"
            Grid.Row="5"
            FontSize="14"
            HorizontalAlignment="Right"
            Text="Пароль"
            Margin="5"/>

        <TextBox
            Grid.Column="1"
            Grid.Row="5"
            Name="password"
            FontSize="14"/>

        <Button
            Grid.Column="1"
            Grid.Row="7"
            Content="Войти"
            FontSize="14"
            Click="OnLoginClick" Background="MediumSpringGreen"/>

        <Button
            Grid.Column="1"
            Grid.Row="9"
            Content="Войти как гость"
            FontSize="14"
            Click="LoginAsGuest" Background="MediumSpringGreen"/>
    </Grid>
</Window>
